@{
    ViewBag.Title = "Create";
}

<h2>Agregar una nueva Entrada</h2>
<form method="post" action="/GuestBook/Create">
<fieldset>
    Por favor ingrese tu Nombre
    <br/>
    <input type="tel" name="Name" maxlength="200"/>
